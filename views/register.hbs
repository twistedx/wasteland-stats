<div class="login-page">
  <div class="login-card">
    <h2>Create Account</h2>
    <p class="login-subtitle">Sign up to track your stats</p>

    {{#if error}}
      <div class="login-error">{{error}}</div>
    {{/if}}

    <form method="POST" action="/auth/register" class="login-form">
      <div class="login-field">
        <label for="username">Display Name</label>
        <input type="text" id="username" name="username" required autocomplete="username" placeholder="Your name" minlength="2" maxlength="32">
      </div>
      <div class="login-field">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required autocomplete="email" placeholder="you@example.com">
      </div>
      <div class="login-field">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required autocomplete="new-password" minlength="8" placeholder="Min 8 characters">
      </div>
      <button type="submit" class="btn btn-login">Create Account</button>
    </form>

    <p class="login-register-link">Already have an account? <a href="/auth/login">Sign in</a></p>

    <div class="login-divider"><span>or</span></div>

    <a href="/auth/discord" class="btn btn-discord login-discord-btn">Login with Discord</a>
  </div>
</div>
